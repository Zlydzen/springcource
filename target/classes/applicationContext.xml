<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="musicBeanRock"
          class="by.byshnev.springcource.RockMusic">
    </bean>

    <bean id="musicBeanRap"
          class="by.byshnev.springcource.RapMusic">
    </bean>

    <bean id="musicBeanClassical"
          class="by.byshnev.springcource.ClassicalMusic">
    </bean>

    <bean id="musicPlayer" class="by.byshnev.springcource.MusicPlayer">
        <property name="musicList">
            <list>
                <ref bean="musicBeanRock"/>
                <ref bean="musicBeanRap"/>
                <ref bean="musicBeanClassical"/>
            </list>
        </property>

        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>